<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        android:layout_margin="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:baselineAligned="false"
            android:id="@+id/champOverheadlayout">

            <ImageView
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:id="@+id/champImage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/champName"
                android:layout_toRightOf="@+id/champImage"
                android:layout_alignTop="@+id/champImage"
                android:textSize="36dp"
                android:text="Mordekaiser"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/champTitle"
                android:layout_below="@+id/champName"
                android:layout_alignLeft="@+id/champName"
                android:textSize="24dp"
                android:paddingRight="5dp"
                android:text="The Seneschal of Demacia" />


            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/champImage"
                android:id="@+id/scrollView"
                android:scrollbars="vertical"
                android:fillViewport="true"
                android:includeFontPadding="false"
                android:paddingBottom="2dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/champLore"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:layout_gravity="fill"
                    android:includeFontPadding="false"
                    android:paddingBottom="2dp"
                    android:textSize="20dp"/>

            </ScrollView>

        </RelativeLayout>

    </android.support.v7.widget.CardView>






</RelativeLayout>